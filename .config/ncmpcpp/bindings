# Search for items
def_key "t"
    find
def_key "t"
    find_item_forward
def_key "n"
    next_found_item
def_key "N"
    previous_found_item

# Volume
def_key "+"
    show_clock
def_key "="
    volume_up
def_key "-"
    volume_down

# Scroll page
def_key "ctrl-u"
    page_up
def_key "ctrl-d"
    page_down

# Navigation
def_key "j"
    scroll_down
def_key "k"
    scroll_up
def_key "h"
    previous_column
def_key "h"
  jump_to_parent_directory
def_key "l"
    next_column
def_key "l"
  enter_directory
def_key "l"
  add_item_to_playlist
def_key "g"
  move_home
def_key "G"
  move_end
def_key "ctrl-f"
  page_down
def_key "ctrl-b"
  page_up

# Lyrics
def_key "."
    show_lyrics

# Queue
def_key "J"
    move_sort_order_down
def_key "J"
    move_selected_items_down
def_key "K"
    move_sort_order_up
def_key "K"
    move_selected_items_up
def_key "0"
  replay_song
def_key "d"
  delete_playlist_items
